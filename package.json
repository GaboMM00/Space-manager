{
  "name": "space-manager",
  "version": "1.0.0",
  "description": "Sistema modular de gesti√≥n de espacios de trabajo digitales",
  "main": "dist/main/index.js",
  "author": "Gabriel Medina",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:renderer": "vite --root src/renderer",
    "dev:main": "electron-vite dev --watch",
    "build": "electron-vite build",
    "build:main": "electron-vite build --entry main",
    "build:renderer": "electron-vite build --entry renderer",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.web.json",
    "clean": "rimraf dist out",
    "package": "electron-builder",
    "package:all": "electron-builder -mwl",
    "prepare": "husky install"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^2.0.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "electron": "^37.2.1",
    "electron-builder": "^25.0.0",
    "electron-vite": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.1.0",
    "rimraf": "^6.0.0",
    "tailwind-merge": "^2.5.0",
    "tailwindcss": "^3.3.5",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^2.0.0",
    "zustand": "^5.0.0"
  }
}
