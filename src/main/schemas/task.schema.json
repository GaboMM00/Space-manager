{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spacemanager.app/schemas/task.schema.json",
  "title": "Task Data Store",
  "description": "JSON Schema for Task checklist data store file",
  "type": "object",
  "required": ["version", "lastModified", "items"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Data store version (semantic versioning)"
    },
    "lastModified": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification timestamp (ISO 8601)"
    },
    "items": {
      "type": "array",
      "description": "Array of tasks",
      "items": {
        "$ref": "#/definitions/Task"
      }
    }
  },
  "definitions": {
    "Task": {
      "type": "object",
      "required": ["id", "spaceId", "title", "status", "priority", "order", "createdAt", "updatedAt"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique task identifier"
        },
        "spaceId": {
          "type": "string",
          "minLength": 1,
          "description": "ID of the space this task belongs to"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Task title"
        },
        "description": {
          "type": "string",
          "maxLength": 1000,
          "description": "Optional task description"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "completed", "cancelled"],
          "description": "Current status of the task"
        },
        "priority": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Task priority level"
        },
        "dueDate": {
          "type": "string",
          "format": "date-time",
          "description": "Optional due date in ISO 8601 format"
        },
        "completedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when task was completed"
        },
        "order": {
          "type": "integer",
          "minimum": 0,
          "description": "Display order within the space"
        },
        "subtasks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Task"
          },
          "description": "Nested subtasks"
        },
        "reminders": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reminder"
          },
          "description": "Task reminders"
        },
        "calendarEventId": {
          "type": "string",
          "description": "External calendar event ID"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        }
      },
      "additionalProperties": false
    },
    "Reminder": {
      "type": "object",
      "required": ["id", "dateTime", "notified", "createdAt", "updatedAt"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique reminder identifier"
        },
        "dateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Reminder date and time"
        },
        "notified": {
          "type": "boolean",
          "description": "Whether notification was sent"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        }
      },
      "additionalProperties": false
    }
  }
}
